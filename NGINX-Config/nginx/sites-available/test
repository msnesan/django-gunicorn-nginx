server_tokens               off;
access_log                  /var/log/nginx/test.access.log;
error_log                   /var/log/nginx/test.error.log;

# This configuration will be changed to redirect to HTTPS later
server {
  server_name               .test.rayvela.com;
  listen                    80;
  location / {
    proxy_pass              http://localhost:8000;
    proxy_set_header        Host $host;
    proxy_set_header        X-Forwarded-Proto $scheme;
  }

  location /static {
    autoindex on;
    alias /var/www/test.rayvela.com/static;	

  }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/test.rayvela.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/test.rayvela.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
